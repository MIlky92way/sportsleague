@model CinemaStore.Models.Account.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title</h2>

<div class="container center-block">
    <div class="row">
        <div class="col-lg-5 col-md-1-5 col-xs-12">
            @using (Html.BeginForm(null, null, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Password">Подтверждение пароля</label>
                    @Html.PasswordFor(x => x.ConfirmationPassword, new { @class = "form-control" })
                </div>
                <div class="form-check">
                    @Html.CheckBoxFor(x => x.RememberMe)
                    <label class="form-check-label" for="exampleCheck1">Запомнить меня</label>
                </div>
                <button type="submit" class="btn btn-primary">Регистрация</button>
            }
        </div>
    </div>
</div>