@using CinemaStore.Entities.Film
@using CinemaStore.Helpers;
@using CinemaStore.Blogic.Film.Model;
@model CinemaStore.Models.Profile.ProfileModel
@{
    ViewBag.Title = Model.Email;
    Model.ClassName = "btn btn-secondary";

}

<h3>Профиль пользователя: @Model.Email</h3>

<div class="container">
    <div class="row">
        <div class="">
            <a href="/film/edit" class="btn btn-dark">Добавить фильм</a>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <h4>Добавленные фильмы</h4>
    </div>
</div>

<div class="container">
    <hr />
    <div class="row">
        
        @foreach (var item in Model.Films ?? new List<FilmModel>())
        {            
            <div class="col-lg-3 col-md-2 col-xs-12">
                <div class="card">                    
                    <img class="card-img-top" src="/uploads/poster/@item.PosterMin" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>                 
                        <a href="/film/edit/@item.Id" class=""> редактировать</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr />
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
            @Html.Pagination(Model, x => Url.Action("Index", new { Page = x, CountOnPage = Model.CountOnPage }))
        </div>
    </div>
</div>
